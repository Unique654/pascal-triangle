#include <stdio.h>

int main()
{ int i,j,k,row,coef;
printf("enter number of rows");
scanf("%d",&row);
    for (i=1;i<=row;i++)
    {
        for (j=1;j<=row-i;j++)
        printf(" ");
        coef=1;
        for(k=1;k<=i;k++)
        {printf("%4d",coef);
        coef=coef*(i-k)/k;
        }
        printf("\n");
}
return(0);
}
